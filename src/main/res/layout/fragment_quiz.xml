<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.QuizFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/txt_tquiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/quiz"
        android:textColor="#673AB7"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/banner_init_quiz"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_below="@+id/txt_tquiz"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/anavitoria_banner"
        android:src="@drawable/avbanner" />

    <TextView
        android:id="@+id/txt_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner_init_quiz"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/txt_quiz"
        android:textSize="36sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_quiz"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="51dp"
        android:gravity="center"
        android:text="@string/txt_desc_quiz"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_iniciar_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:paddingHorizontal="5dp"
        android:stateListAnimator="@null"
        android:text="@string/iniciar_quiz"
        android:textColor="#DC323232"
        android:textSize="18sp" />
</RelativeLayout>