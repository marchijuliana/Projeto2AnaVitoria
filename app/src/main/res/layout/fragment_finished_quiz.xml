<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.FinishedQuiz"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="15dp"
        android:background="#3E673AB7"
        android:orientation="vertical"
        android:paddingVertical="15dp">

        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Você seria... A Vitória!"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/img_result"
            android:layout_width="279dp"
            android:layout_height="272dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/avvitoria" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/txt_descritivo_vitoria" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_legal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_legal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />

</LinearLayout>