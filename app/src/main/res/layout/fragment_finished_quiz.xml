<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".quiz.FinishedQuiz"
    android:background="@color/AmareloMaisClaroAinda"
    android:orientation="vertical"
    android:paddingHorizontal="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="@color/AzulEscuro"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="5dp"
        android:layout_marginHorizontal="10dp"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Você seria... A Vitória!"
                android:textColor="@color/AmareloBege"
                android:textSize="28dp" />

            <ImageView
                android:id="@+id/img_result"
                android:layout_width="279dp"
                android:layout_height="272dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/avvitoria" />

            <TextView
                android:id="@+id/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/AmareloMaisClaro"
                android:gravity="center"
                android:text="@string/txt_descritivo_vitoria" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_legal"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/AmareloBege"
        android:text="@string/txt_legal"
        android:textColor="@color/AzulEscuro" />

</LinearLayout>