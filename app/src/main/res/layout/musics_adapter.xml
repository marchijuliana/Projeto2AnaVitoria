<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/AmareloMaisClaro">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="@color/AzulMaisEscuro"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="10dp"
        android:clickable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/text_view_nomemusica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/AmareloBege"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_view_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@id/text_view_nomemusica"
            android:textColor="#FFFF"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/text_view_ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_view_album"
            android:layout_below="@id/text_view_nomemusica"
            android:textColor="#FFFF"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/text_view_duracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view"
            android:layout_below="@id/text_view_ano"
            android:textColor="#FFFF"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>