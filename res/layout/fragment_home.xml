<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/anavit_fc"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/anavitoria"
        android:src="@drawable/anavit" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/letra_outroria"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/siga_redes_sociais"
        android:textSize="18sp"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/logo_fb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/anavitoria"
            android:src="@drawable/logo_fb"
            android:layout_marginHorizontal="3dp"/>
        <ImageView
            android:id="@+id/logo_tw"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/anavitoria"
            android:src="@drawable/logo_tw"
            android:layout_marginHorizontal="3dp"/>
        <ImageView
            android:id="@+id/logo_insta"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/anavitoria"
            android:src="@drawable/logo_insta"
            android:layout_marginHorizontal="3dp"/>
    </LinearLayout>


</LinearLayout>